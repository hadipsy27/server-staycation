<!-- DataTales -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
      <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
        <i class="fa fa-plus"> Bank</i>
    </button>
  
  </div>
  <div class="card-body">
      <div class="table-responsive">
          <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
                  <tr>
                      <th>No</th>
                      <th>Name Bank</th>
                      <th>Nomor Rekening</th>
                      <th>Name</th>
                      <th>Image</th>
                      <th>Action</th>
                  </tr>
              </thead>
              <tbody>
                <% for(let i = 0; i < bank.length; i++) { %>
                  <tr>
                      <td><%= i + 1 %> </td>
                      <td><%= bank[i].nameBank %> </td>
                      <td><%= bank[i].nomorRekening %> </td>
                      <td><%= bank[i].name %> </td>
                      <td>
                          <img src="http://localhost:3000/<%= bank[i].imageUrl %>" alt="Image" height="70px" width="70px">
                      </td>
                      <td>
                        <form action="/admin/category/<%= bank[i].id %>?_method=DELETE " method="POST">
                          <a href="javascript:void()" type="button" class="btn btn-primary btn-sm button-update" 
                          style="margin-right: 3%;" data-id="<%= bank[i].id %>" 
                          data-name="<%= bank[i].name %>">
                            <i class="fas fa-edit"></i>
                          </a>

                          <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                        </form>
                      </td>
                  </tr>
                <% } %> 
            </tbody>
          </table>
      </div>
  </div>
</div>